@model Product
<div class="col-lg-3 col-md-4 col-sm-6">
    <div class="featured__item">
        <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../ProductImage/" + Model.Image)">
            <ul class="featured__item__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text">
            <h6><a asp-controller="Home" asp-action="ProductDetail" asp-route-productId="@Model.ProductId">@Model.Name</a></h6>
            <h5>@($"{Model.Price:N0} ₫")</h5>
        </div>
    </div>
</div>